@page
@model SignalRSimple.Models.ProductModel;

@{
    ViewData["Title"] = "Home page";
}
    <div class="row">
        <div class="col-md-6">
            <div >
                <div class="container">
                    <h2 class="text-center">Add New Message</h2>
                    <div class="form-group">
                        <label class="control-label">User</label>
                        <input type="text" id="userInput" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Message</label>
                        <input type="text" id="messageInput" class="form-control" />
                    </div>

                    <div class="text-center">
                        <input type="button" id="sendButton" value="Send Message" class="btn btn-danger" />
                    </div>
                </div>
            </div>

            <div>
                <hr />
            </div>

            <div class="container">
                <div class="container">
                    <h2 class="text-center">Add New Product</h2>
                    <div class="form-group">
                        <label class="control-label">Product Name</label>
                        <input type="text" name="firstname" id="productName" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Product Price</label>
                        <input type="text" name="lastname" id="productPrice" class="form-control" />
                    </div>
                    <div class="text-center">
                        <input type="button" id="addProductBtn" value="Add Product" class="btn btn-danger" />
                    </div>
                </div>
            </div>

            <div>
                <hr />
            </div>

            <section>
                <div class="container">
                    <h2 class="text-center">Add New Student</h2>
                    <form>
                        <div class="form-group">
                            <label class="control-label">FirstName</label>
                            <input type="text" name="firstname" id="firstname" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label class="control-label">LastName</label>
                            <input type="text" name="lastname" id="lastname" class="form-control" />
                        </div>
                        <div class="text-center">
                            <input type="button" id="addStudentBtn" value="Add New Student" class="btn btn-danger" />
                        </div>

                    </form>
                </div>
            </section>
        </div>

        <div class="col-md-6">
            <div class="row">
                <div >
                    <ul id="messagesList"></ul>
                </div>
            </div>
        </div>
    </div>


<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/ChatAll.js"></script>